## /etc/logrotate.d/mhn
/var/log/mhn/*.log
/var/log/mhn/*.err
{
	rotate {{Â mhn_logrotate_days }}
	daily
	missingok
	create 0644 syslog adm
	notifempty
	delaycompress
	compress
	postrotate
		restart supervisor >/dev/null 2>&1 || true
		setfacl -m "u:nagios:r--" -- $1 >/dev/null 2>&1 || true;
	endscript
}

